[Unit]
Description=Information Collector Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/info-collector
Environment="PATH=/opt/info-collector/venv/bin"
ExecStart=/opt/info-collector/venv/bin/python /opt/info-collector/server.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

